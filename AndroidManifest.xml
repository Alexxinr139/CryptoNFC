<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.roly.nfc.crypto"
    android:versionCode="8"
    android:versionName="1.8" >

    <uses-sdk android:minSdkVersion="10" android:targetSdkVersion="15"/>

    <uses-permission android:name="android.permission.NFC" />

    <uses-feature
        android:name="android.hardware.nfc"
        android:required="true" />

    <application
        android:icon="@drawable/logo"
        android:label="@string/app_name" >
        <activity
            android:name=".CryptoNFCActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="NoteEditer" >
        </activity>
        <activity android:name="NoteList" >
        </activity>

        <provider
            android:name=".provider.NoteProvider"
            android:authorities="com.roly.nfc.crypto.noteprovider" >
        </provider>

        <activity android:name=".nfc.TagWriter" >
        </activity>
        <activity android:name=".CryptoNFCPreferenceActivity" >
        </activity>
        <activity android:name=".nfc.KeyPicker" >
        </activity>
        <activity android:name=".UncipheredNote" >
        </activity>
    </application>

</manifest>