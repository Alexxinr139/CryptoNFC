<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:custom="http://schemas.android.com/apk/res/com.roly.nfc.crypto"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:background="#000"
        android:paddingTop="4dp"
        >

    <com.roly.nfc.crypto.ui.view.MenuEntry
            android:id="@+id/menu_view_notes"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".5"
            android:layout_marginBottom="4dp"
            custom:label="View notes"
            custom:imageSrc="@drawable/notelist"
            custom:backgroundColor="#3498db"
            />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".25"
            android:orientation="horizontal">

        <com.roly.nfc.crypto.ui.view.MenuEntry
                android:id="@+id/menu_write_key"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".5"
                custom:label="New key"
                custom:imageSrc="@drawable/tag"
                custom:backgroundColor="#e74c3c"
                android:layout_marginRight="2dp"
                />

        <com.roly.nfc.crypto.ui.view.MenuEntry
                android:id="@+id/menu_get_code"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".5"
                android:layout_marginLeft="2dp"
                custom:label="Get code!"
                custom:imageSrc="@drawable/code"
                custom:backgroundColor="#27ae60"
                />

    </LinearLayout>

    <com.roly.nfc.crypto.ui.view.MenuEntry
            android:id="@+id/menu_add_note"
            android:layout_marginTop="4dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".25"
            custom:label="Add Note"
            custom:imageSrc="@drawable/addnote"
            custom:backgroundColor="#e67e22"
            />

</LinearLayout>