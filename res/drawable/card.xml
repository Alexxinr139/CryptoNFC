<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:top="4dp" android:left="8dp" android:right="8dp">
        <shape android:shape="rectangle"
               android:dither="true">

            <corners android:radius="2dp"/>
            <solid android:color="#777" />

        </shape>
    </item>

    <item android:bottom="2dp" android:top="4dp" android:left="8dp" android:right="8dp">
        <shape android:shape="rectangle"
               android:dither="true">

            <corners android:radius="2dp" />
            <solid android:color="#ccc" />

            <padding android:bottom="16dp"
                     android:left="16dp"
                     android:right="16dp"
                     android:top="8dp" />
        </shape>
    </item>
</layer-list>